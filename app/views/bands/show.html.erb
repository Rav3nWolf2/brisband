<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @band.name %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @band.bio %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @band.genre %>
</p>

<strong>Members:</strong>
<ul>
  <% for user in @band.users %>
    <li><%= link_to user.name, user %></li>
    <ul>
      <% for item in user.items %>
        <p>
          <strong>Brand:</strong>
          <%= item.brand %>
        </p>
        <p>
          <strong>Model:</strong>
          <%= item.model %>
        </p>
        <p>
          <strong>Description:</strong>
          <%= item.description %>
        </p>
        <% if item.for_sale %>
          <p>
            <strong>For Sale:</strong>
            <%= item.price %>
          </p>
        <% end %>
        <%= link_to 'Show', item %>
      <% end %>
    </ul>
  <% end %>
</ul>

<p>
  <strong>Status:</strong>
  <%= @band.status %>
</p>

