<p id="notice"><%= notice %></p>

<% if @band.images.attached? %>
  <% for image in @band.images %>
    <%= cl_image_tag(image.key, :width=>400, :crop=>"fit") %>
    <% if current_user %>
      <% if @band.can_destroy?(current_user) %>
        <%= link_to 'Remove', delete_image_attachment_band_url(image.signed_id),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @band.name %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @band.bio %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @band.genre %>
</p>

<p>
  <strong>Status:</strong>
  <% if @band.status == true %>
    Active
  <% else %>
    Not Active
  <% end %>
</p>

<strong>Members:</strong>
<ul>
  <% for user in @band.users %>
    <li><%= link_to user.name, user %></li>
    <ul>
      <% for item in user.items %>
        <p>
          <strong>Brand:</strong>
          <%= item.brand %>
        </p>
        <p>
          <strong>Model:</strong>
          <%= item.model %>
        </p>
        <p>
          <strong>Description:</strong>
          <%= item.description %>
        </p>
        <% if item.for_sale %>
          <p>
            <strong>For Sale:</strong>
            <%= item.price %>
          </p>
        <% end %>
        <%= link_to 'Show', item %>
      <% end %>
    </ul>
  <% end %>
</ul>

<% if current_user %>
  <% if @band.can_edit?(current_user) %>
    <%= link_to 'Edit', edit_band_path(@band) %>
  <% end %>
  <% if @band.can_destroy?(current_user) %>
    | <%= link_to 'Delete', @band, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>