<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <% if item.image.attached? %>
            <%= cl_image_tag(item.image.key, :width=>100, :crop=>"fit") %>
          <% end %>
        </td>
        <td><%= item.brand %></td>
        <td><%= item.model %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Show', item %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>