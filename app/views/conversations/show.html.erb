<h1><%= @conversation.subject %></h1>

<% for receipt in @conversation.receipts_for(current_user) %>
    <div>
        <p><strong><%= link_to receipt.message.sender.name, receipt.message.sender %></strong></p>
        <p> <%= receipt.message.body %> </p>
    </div>
<% end %>

<%= form_tag conversation_messages_path(@conversation), method: :post do %>
    <div>
        <%= text_area_tag :body %>
    </div>

    <%= submit_tag %>
<% end %>