<h1> New Conversation </h1>

<%= form_tag conversations_path, method: :post do %>
    <div>
        <%= @recipient.name %>
    </div>

    <%= hidden_field_tag :recipient, @recipient.id %>

    <div>
        <%= text_field_tag :subject, "Subject" %>
    </div>

    <div>
        <%= text_area_tag :body, "Leave a comment" %>
    </div>

    <%= submit_tag %>
<% end %>